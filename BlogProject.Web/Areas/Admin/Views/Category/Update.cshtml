@model CategoryUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi / <a class="text-muted fw-light" href="/Admin/Category/Index">Kategoriler </a>/</span> Kategori Düzenle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">KATEGORİ ADI</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-label">KATEGORİ AÇIKLAMASI</label>
                            <input asp-for="Description" type="text" class="form-control mb-3" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-dark">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>