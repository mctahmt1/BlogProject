@model ArticleDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Silinen Makaleler /<a class="text-muted fw-light" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles"> Makaleler </a>/</span> Makale Detayı</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Image.FileName" for="formFile" class="form-label d-block mt-3">Makale Görseli</label>
                        <img style="height:20em; width:20em; display:block; margin-left:auto; margin-right:auto;" src="~/images/@Model.Image.FileName" alt="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.Name" class="form-label">KATEGORİ</label>
                        <input asp-for="Id" type="hidden">
                        <input id="categoryList" class="form-control" asp-for="Category.Name" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="form-label mt-3">BAŞLIK</label>
                        <input asp-for="Title" type="text" class="form-control mb-3" placeholder="Makalenizin başlığı" aria-describedby="defaultFormControlHelp" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="form-label">İÇERİK</label>
                        <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Makalenizin içeriği" aria-describedby="defaultFormControlHelp" style="min-height:300px;" readonly></textarea>
                    </div>
                    <div class="form-group">
                        <a asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles" class="btn btn-outline-dark">Tamam</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>