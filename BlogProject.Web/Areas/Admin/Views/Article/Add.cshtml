@model ArticleAddDto
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi / <a class="text-muted fw-light" href="/Admin/Article/Index">Makaleler </a>/</span> Makale Ekle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label">KATEGORİ</label>
                            <a class="btn btn btn-outline-dark btn-sm float-end mb-2" data-bs-toggle="modal" data-bs-target="#modalCenter">
                                Ekle <i class="bx bx-plus"></i>
                            </a>
                            <select id="categoryList" class="form-select mb-3" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" for="formFile" class="form-label">Makale Görseli</label>
                            <input asp-for="Photo" accept="image/*" class="form-control mb-3" type="file" id="formFile">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="form-label">BAŞLIK</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" placeholder="Makalenizin başlığı" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="form-label">İÇERİK</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Makalenizin içeriği" aria-describedby="defaultFormControlHelp" style="min-height:300px;"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-dark">Kaydet</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">KATEGORİ EKLE</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col mb-3">
                    <form>
                        <div class="form-group">
                            <label class="d-block form-label">KATEGORİ ADI</label>
                            <input type="text" id="categoryName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="d-block form-label mt-3">KATEGORİ AÇIKLAMASI</label>
                            <textarea type="text" id="categoryDescription" class="form-control" ></textarea>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" data-keyboard="false" class="btn btn-primary" id="btnSave">Ekle</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/js/categoryadd.js"></script>
    <script>
        var app = app || {};
        app.Urls = app.Urls || {};

        app.Urls.baseUrl = '@Url.Content("~")';
        app.Urls.categoryAddUrl = "@(Url.Action("AddWithAjax", "Category"))";
        app.Urls.articleAddUrl = "@(Url.Action("Add", "Article"))";
    </script>
}