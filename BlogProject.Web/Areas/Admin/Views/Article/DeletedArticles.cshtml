@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Silinenler /</span> Silinen Makaleler
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <table class="table table-bordered" id="articleTables" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>BAŞLIK</th>
                        <th>KATEGORİ</th>
                        <th>OLUŞTURULMA TARİHİ</th>
                        <th>OLUŞTURAN</th>
                        <th>DURUM</th>
                        <th>İŞLEMLER </th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td title="@article.Title">@(article?.Title?.Length > 30 ? article.Title.Substring(0, 30) + "..." : article.Title)</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a title="Makalenin Detayı" class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticleDetails" asp-route-articleId="@article.Id"><i class="bx bxs-edit"></i></a>
                                <a title="Geri Yükle" class="btn btn-success btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@article.Id"><i class='bx bx-undo'></i></a>
                                <a title="Kalıcı olarak sil" class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bxs-minus-circle"></i></a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/articleindex.js" type="application/ecmascript"></script>
}
